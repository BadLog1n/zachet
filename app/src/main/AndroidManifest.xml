<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.INTERNET"/>


    <application
        android:largeHeap="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/main_icon"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@drawable/main_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.UniversitySystem"
        android:windowSoftInputMode="adjustResize"
        tools:targetApi="31">
        

        <activity
            android:name="com.oneseed.zachet.ImageActivity"
            android:exported="false"
            android:theme="@style/Theme.UniversitySystem" />
        <activity
            android:name="com.oneseed.zachet.IndividualChatActivity"
            android:exported="false"
            android:windowSoftInputMode="stateVisible"
            android:theme="@style/Theme.UniversitySystem.ActionBar"/>
        <activity
            android:name="com.oneseed.zachet.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.UniversitySystem"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <meta-data
            android:name="firebase_crashlytics_collection_enabled"
            android:value="true" />
    </application>

</manifest>